<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TriangleView">
        <attr name="trv_color" format="color" />
        <attr name="trv_direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="right" value="2" />
            <enum name="left" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MenuItem">
        <attr name="menu_title" format="string" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="CommonLinearLayout">
        <attr name="common_title" format="string"/>
        <attr name="common_content" format="string"/>
        <attr name="common_isBack" format="boolean"/>
        <attr name="common_isSwitch" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleIndicatorView">
        <attr name="cir_selectColor" format="color"/>
        <attr name="cir_unSelectColor" format="color"/>
    </declare-styleable>

</resources>