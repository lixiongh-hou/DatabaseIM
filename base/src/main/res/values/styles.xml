<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--分割线-->
    <style name="dividing_line">
        <item name="android:background">@color/chat_title_line_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp0.5</item>
    </style>


    <!--默认TabLayout样式-->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">@dimen/dp2</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp13</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--Dialog样式-->
<!--    <style name="commonStyleDialog" parent="@android:style/Theme.Dialog">-->
<!--        <item name="android:windowFullscreen">true</item>-->
